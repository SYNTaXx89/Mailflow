{
  "name": "mailflow",
  "version": "1.0.0",
  "description": "A React-based email client application",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "nodemon --exec \"ts-node --project server/tsconfig.json\" server/index.ts",
    "build": "tsc && vite build",
    "build:backend": "tsc --project server/tsconfig.json",
    "start": "node dist/server/index.js",
    "postbuild": "npm run build:backend",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:prod": "./scripts/docker-prod.sh",
    "docker:test": "./scripts/docker-test.sh",
    "docker:build": "docker build -t mailflow:latest .",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/imap": "^0.8.42",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mailparser": "^3.4.6",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/sqlite3": "^5.1.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "emailjs-mime-parser": "^2.0.7",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.263.1",
    "mailparser": "^3.7.3",
    "multer": "^2.0.1",
    "nodemailer": "^7.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-parser": "^0.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^3.2.4"
  }
}
