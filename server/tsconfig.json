{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "rootDir": "..",
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "**/*",
    "../src/types/**/*",
    "../src/imap/**/*"
  ],
  "exclude": [
    "node_modules",
    "../src/components/**/*",
    "../src/hooks/**/*",
    "../src/config/**/*",
    "../src/*.tsx",
    "../src/*.ts"
  ]
}